@model MagisterWeb.Models.Matricula

@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>

<p>
    Notas e Faltas
</p>
<div class="form-group">
    @Html.Label("Período Letivo:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("Semestre", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PeriodoLetivo, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Disciplina", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("Disciplinas", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Disciplina, "", new { @class = "text-danger" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MatriculaAluno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aluno.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faltas1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faltas2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faltas3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota3)
        </th>
    </tr>

    @foreach (var item in Model.listaMatriculas)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.MatriculaAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faltas1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faltas2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faltas3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota3)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { ano = item.Ano, semestre = item.Semestre }) |
                @Html.ActionLink("Detalhar", "Details", new { ano = item.Ano, semestre = item.Semestre }) |
                @Html.ActionLink("Deletar", "Delete", new { ano = item.Ano, semestre = item.Semestre })
            </td>
        </tr>
    }

</table>
